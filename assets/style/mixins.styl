sis-hamburger(width = 20px, height = 10px, weight = 1px, color = #000, hover = #000)
  width width
  height 2 * height + weight
  position absolute
  span
    position absolute
    top 0
    left 0
    width width
    height weight
    border-radius weight / 2
    background-color color
    &:nth-child(1)
      top 0
    &:nth-child(2)
      top height
    &:nth-child(3)
      top 2 * height
  &:hover span
    background-color hover
