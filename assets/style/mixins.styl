
sis-double-chevron(size = 10px, weight = 1px, direction = 'right', color = #000, hover = #000)
  width (2 * size)
  height (2 * size)
  &::after, &::before
    position absolute
    content ''
    display block
    width size
    height size
    border weight solid color
    border-width weight weight 0 0
    top 50%
    left 50%
    transition all 0.3s ease
    transform-origin center center
    if direction == 'left'
      transform rotate(-135deg)
      margin-top (-0.5 * size)
      margin-left (-0.5 * size)
    if direction == 'right'
      transform rotate(45deg)
      margin-top (-0.5 * size)
      margin-left (-1 * size)
    if direction == 'top'
      transform rotate(-45deg)
      margin-top (-0.4 * size)
      margin-left (-0.5 * size)
    if direction == 'bottom'
      transform rotate(135deg)
      margin-top (-0.8 * size)
      margin-left (-0.5 * size)
  &:hover::after, &:hover::before
    border-color hover
  &::after
    if direction == 'left'
      margin-left (-0.5 * size + 4 * weight)
    if direction == 'right'
      margin-left (-1 * size + 4 * weight)
    if direction == 'top'
      margin-top (-0.4 * size + 4 * weight)
    if direction == 'bottom'
      margin-top (-0.8 * size + 4 * weight)

